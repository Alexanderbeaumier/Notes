{
    "family": "note-taking-app",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::314282564487:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::314282564487:role/ecsTaskRole",
    "containerDefinitions": [
      {
        "name": "notes",
        "image": "314282564487.dkr.ecr.us-east-1.amazonaws.com/notes",
        "essential": true,
        "memory": 512,
        "cpu": 256,
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80
          }
        ],
        "environment": [
        {
          "name": "DB_HOST",
          "value": "notes-db.cjgg8gioeyrk.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_USER",
          "value": "admin"
        },
        {
          "name": "DB_PASS",
          "value": "password"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_NAME",
          "value": "postgres"
        }
      ]
    }
  ]
}
